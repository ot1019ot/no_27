<div class="user-edit-page" style="margin: 40px; text-align: center;">
  <h2>会員情報編集</h2>


  <%= form_for(@user) do |f| %>


    <div class="field">
      <h5>ニックネーム</h5>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <h5>エリア</h5>
      <%= f.text_field :area, autofocus: true, autocomplete: "area" %>
    </div>


    <div class="field">
      <%= f.label :Eメール %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions" style="margin-top: 10px;">
      <%= f.submit "編集する", :class => "btn btn-info"%>
      <%= link_to "退会する", user_registration_path, method: :delete, "data-confirm" => "本当に退会しますか？",:class => "btn btn-danger"%>
    </div>

  <% end %>

</div>