<div class="container new-car" style="margin: 60px auto; text-align: center;">
	<div class="row">
		<h2>イベントを追加</h2>

		<%= form_for(@event, url:events_path) do |f| %>


			<div class="field">
		      <%= f.label :イベント名 %><br />
		      <%= f.text_area :event_name %>
		    </div>

		    <div class="field">
		      <%= f.label :場所 %><br />
		      <%= f.text_area :event_address %>
		    </div>

		    <div class="field">
		      <%= f.label :日付 %><br />
		      <%= f.date_select :event_date %>
		    </div>

		    <div class="field" style="margin-top: 10px;">
		    	<%= f.submit "登録", :class => "btn btn-info"%>
		    	<%= link_to "削除", event_path(@event), method: :delete, :class => "btn btn-danger"%>
		    </div>


		<% end %>
	</div>
</div>